{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["es6", "es5", "dom"],
    "strict": true
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "compiled",
    "pretty": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}